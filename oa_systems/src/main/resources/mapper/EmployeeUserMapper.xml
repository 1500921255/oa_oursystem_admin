<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.EmployeeUserMapper">


    <resultMap id="employeeUser" type="com.example.demo.entity.EmployeeUser">
        <id column="employee_id" property="employeeId"></id>
        <result column="employee_user" property="employeeUser"></result>
        <collection property="employeeRole" javaType="java.util.Set" ofType="com.example.demo.entity.Role">
            <id column="id" property="id"></id>
            <result column="role_name" property="roleName"></result>
            <result column="description" property="description"></result>
        </collection>
    </resultMap>
    <select id="getemployeeRole" parameterType="int" resultType="com.example.demo.entity.Role">
select eu.employee_id euid,eu.employee_user,r.id,r.role_name from
employee_user eu left join employee_user_role eur on eu.employee_id=eur.employee_id
left join role r on eur.role_id=r.id where eu.employee_id=#{employee_id};
    </select>
    <select id="getemployeeId" resultType="int">
        select employee_id from employee_user
    </select>

</mapper>
